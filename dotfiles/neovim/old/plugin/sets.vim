set encoding=utf-8

" allows for external vimrcs
set exrc
" always blockc ursor
set guicursor=
set noshowmode
" relative linenumbers
set relativenumber
set number

set nowrap

set hidden
" no annoying beep
set noerrorbells
set visualbell

set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent

set ignorecase
