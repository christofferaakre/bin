set noswapfile
set nobackup
set undofile

set incsearch
set scrolloff=8
set completeopt=menuone,noinsert,noselect

set signcolumn=yes

set cmdheight=2
set updatetime=50
set shortmess+=c

set colorcolumn=80

set laststatus=2
set ruler

set foldmethod=indent
set foldlevel=99
